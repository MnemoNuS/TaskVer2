@model IEnumerable<TaskVer2.Models.Chanel>

@{
    ViewBag.Title = "Connected chanels";
}

<div style="background-color:lightgrey; color:whitesmoke">
    <h1>
        Connected chanels
    </h1>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.link)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.link)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ChanelID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ChanelID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ChanelID })
        </td>
    </tr>
}

</table>
<a href="~/Feed/index" class="btn btn-default">Load news immediately</a>
